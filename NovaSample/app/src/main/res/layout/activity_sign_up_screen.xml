

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.developeri.novasample.signUpScreen">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id = "@+id/profileView"/>
    <EditText
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/userNameView"
        android:layout_below="@+id/profileView"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:layout_marginTop="40dp"/>
    <EditText
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/nameView"
        android:layout_below="@+id/userNameView"
        android:layout_centerHorizontal="true"
        android:hint="Username"
        android:layout_marginTop="40dp"/>

    <EditText
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/emailView"
        android:layout_below="@+id/nameView"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:layout_marginTop="40dp"/>
    <EditText
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/passView"
        android:layout_below="@+id/emailView"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:layout_marginTop="40dp"/>
    <EditText
        android:singleLine="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/confirmPassView"
        android:layout_below="@+id/passView"
        android:layout_centerHorizontal="true"
        android:hint="Re-enter Password"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/confirmPassView"
        android:layout_marginTop="40dp"
        android:id = "@+id/signBtn"
        android:text="Register"/>

</RelativeLayout>
