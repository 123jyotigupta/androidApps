<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/coffee"
    tools:context=".MainActivity">

    <TextView android:text="quantity" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#ffc89a"
        android:textAllCaps="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:onClick="decrement"
            android:layout_marginRight="16dp"
            android:textSize="30sp"
            android:fontFamily="sans-serif-medium"
            android:text="-"/>

        <TextView android:id="@+id/quantity_text_view"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="5dp"
            android:textSize="40sp"
            android:textColor="#ffc89a"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"/>
        <Button
            android:id="@+id/incrementBtn"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="+"
            android:fontFamily="sans-serif-medium"
            android:textSize="30sp"
            android:onClick="increment"/>

    </LinearLayout>
    <TextView android:text="price" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="30sp"
        android:textColor="#ffc89a"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"/>

    <TextView android:id="@+id/price_text_view"
        android:layout_height="wrap_content"
        android:text="$0"
        android:textSize="30sp"
        android:textColor="#ffc89a"
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDER"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:background="#db9539"
        android:fontFamily="sans-serif-medium"
        android:onClick="submitOrder" />

</LinearLayout>

